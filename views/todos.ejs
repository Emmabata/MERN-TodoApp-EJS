<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Todo App List</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f5f8ff;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 30px;
    }
    .buttonTop {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .button {
      background-color: #3498db;
      color: white;
      padding: 10px 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin: 4px;
      font-size: 14px;
    }

    .button:hover {
      background-color: #2980b9;
    }

    .logout-btn {
      background-color: #e74c3c;
    }

    .logout-btn:hover {
      background-color: #c0392b;
    }

    .todo-card {
      background-color: #ffffff;
      border-left: 6px solid #3498db;
      border-radius: 6px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 16px;
      margin-bottom: 20px;
    }

    .todo-card h2 {
      color: #34495e;
      margin: 10px 0;
    }

    .todo-card p {
      margin: 5px 0;
      font-size: 14px;
    }

    .actions {
      margin-top: 10px;
    }

    .actions form, .actions a {
      display: inline-block;
    }

    .actions button {
      margin-right: 6px;
    }
  </style>
</head>
<body>

  <h1>Todo App List</h1>

  <div class="buttonTop">
    <form action="/todos/new" method="GET" style="text-align: center;">
    <button class="button">‚ûï Add Todo</button>
  </form>

  <form action="/logout" method="POST" style="text-align: center;">
    <button class="button logout-btn">üö™ Logout</button>
  </form>
  </div>
  

  <% todos.forEach(function(todo, index) { %>
    <div class="todo-card">
      <p><strong>Task <%= index + 1 %></strong></p>
      <h2><%= todo.task %></h2>
      <p>Status: <strong><%= todo.completed ? '‚úÖ Completed' : '‚è≥ Pending' %></strong></p>
      <p>Created At: <%= new Date(todo.createdAt || Date.now()).toLocaleString() %></p>
      <p>Updated At: <%= new Date(todo.updatedAt || Date.now()).toLocaleString() %></p>

      <div class="actions">
        <a href="/todos/edit/<%= todo._id %>">
          <button class="button">‚úèÔ∏è Edit</button>
        </a>

        <form action="/todos/complete/<%= todo._id %>" method="POST">
          <button class="button"><%= todo.completed ? 'üîÑ Mark as Pending' : '‚úÖ Mark as Completed' %></button>
        </form>

        <form action="/todos/delete/<%= todo._id %>" method="POST">
          <button class="button logout-btn">üóëÔ∏è Delete</button>
        </form>
      </div>
    </div>
  <% }) %>

</body>
</html>
